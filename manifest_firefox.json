{
	"manifest_version": 3,
	"name": "Screenshot Selector",
	"version": "1.0.0",
	"description": "Zaznacz obszar na stronie i skopiuj jako obraz do schowka",
	"author": "fixeq",

	"browser_specific_settings": {
		"gecko": {
			"id": "screenshot-selector@fixeq.github.io",
			"strict_min_version": "109.0"
		}
	},

	"permissions": ["activeTab", "scripting", "storage"],

	"host_permissions": ["https://text.pollinations.ai/*"],

	"action": {},

	"background": {
		"scripts": ["background.js"]
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},

	"content_scripts": [
		{
			"matches": ["https://*.testportal.pl/*", "https://*.testportal.net/*"],
			"js": ["content.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	],

	"web_accessible_resources": [
		{
			"resources": ["bypass-inject.js"],
			"matches": ["https://*.testportal.pl/*", "https://*.testportal.net/*"]
		}
	]
}
